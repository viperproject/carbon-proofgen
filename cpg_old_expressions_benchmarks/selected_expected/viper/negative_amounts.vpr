field f: Ref
field p: Perm

method test01(x: Ref, k: Perm)
  requires acc(x.f)
  requires k < write
  requires k != none
{
  //:: ExpectedOutput(exhale.failed:negative.permission)
  exhale acc(x.f, k)
}

method test02(x: Ref)
  requires acc(x.f)
{
  var k: Perm
  assume none != k && k < write
  k := (-1) * k
  //:: ExpectedOutput(assert.failed:assertion.false)
  assert none < k
}

method test03(x: Ref, k: Perm) {
  //:: ExpectedOutput(inhale.failed:negative.permission)
  inhale acc(x.f, k)
  assert k >= none
}
